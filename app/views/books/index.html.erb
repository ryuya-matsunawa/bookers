<div>
    <table>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: 'delete' %></td>
            </tr>
        <% end %>
    </table>
    <%= form_with model: @book do |f| %>
        <%= f.text_field :title %>
        <%= f.text_area :body %>
        <%= f.submit %>
    <% end %>
</div>